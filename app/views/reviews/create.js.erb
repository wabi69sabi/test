const newReviewForm = document.getElementById('new_review');
<% if @review.errors.any? %>
  newReviewForm.innerHTML = "<%= j render 'reviews/form', restaurant: @restaurant, review: @review %>";
<% else %>
  const reviews = document.getElementById('reviews');
  reviews.insertAdjacentHTML("beforeend", "<%= j render 'reviews/show', review: @review %>");
  newReviewForm.innerHTML = "<%= j render 'reviews/form', restaurant: @restaurant, review: Review.new %>";
<% end %>
